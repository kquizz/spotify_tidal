<%= turbo_frame_tag "song_#{song.id}" do %>
  <div class="flex items-center gap-4 p-4 hover:bg-white/5 transition-colors">
    <% album_image = song.respond_to?(:album) ? song.album.image_url : song[:album_image] %>
    <% album_name = song.respond_to?(:album) ? song.album.name : song[:album] %>
    <% song_name = song.respond_to?(:name) ? song.name : song[:name] %>
    <% artist_name = song.respond_to?(:artist) ? song.artist.name : song[:artists] %>
    
    <% if album_image %>
      <img src="<%= album_image %>" alt="<%= album_name %>" width="56" height="56" class="rounded-lg object-cover flex-shrink-0 shadow-lg">
    <% else %>
      <div class="w-14 h-14 bg-gradient-to-br from-gray-700 to-gray-800 rounded-lg flex items-center justify-center flex-shrink-0 shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-500">
          <path d="M9 18V5l12-2v13"></path>
          <circle cx="6" cy="18" r="3"></circle>
          <circle cx="18" cy="16" r="3"></circle>
        </svg>
      </div>
    <% end %>
    
    <div class="flex-1 min-w-0 grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Spotify Info -->
      <div class="min-w-0">
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-4 h-4 text-green-400 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
          </svg>
          <span class="text-xs font-bold text-muted uppercase tracking-wider">Spotify</span>
        </div>
        <div class="truncate font-semibold text-white text-base mb-1"><%= song_name %></div>
        <div class="truncate text-sm text-muted"><%= artist_name %> â€¢ <%= album_name %></div>
      </div>

      <!-- Tidal Info -->
      <div class="min-w-0 lg:border-l border-white/5 lg:pl-6">
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-4 h-4 text-cyan-400 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12.012 3.992L8.008 7.996L4.004 3.992L0 7.996L4.004 12L8.008 7.996L12.012 12L16.016 7.996L12.012 3.992ZM12.012 12L8.008 16.004L12.012 20.008L16.016 16.004L12.012 12ZM20.02 7.996L16.016 12L20.02 16.004L24.024 12L20.02 7.996Z"/>
          </svg>
          <span class="text-xs font-bold text-muted uppercase tracking-wider">Tidal Match</span>
        </div>
        
        <% if song.respond_to?(:tidal_id) && song.tidal_id.present? %>
          <div class="truncate font-semibold text-white text-base mb-1"><%= song.tidal_track_name || song_name %></div>
          <div class="truncate text-sm text-muted"><%= song.tidal_artist_name || artist_name %></div>
        <% elsif song.respond_to?(:tidal_id) %>
          <% 
            lookup_log = JSON.parse(song.lookup_log || '[]') rescue []
            tooltip_text = if lookup_log.any?
              lookup_log.map do |attempt|
                lines = ["ðŸ” #{attempt['timestamp']}"]
                if attempt['strategies']
                  attempt['strategies'].each do |strat|
                    status = strat['result'] == 'match' ? 'âœ“' : 'âœ—'
                    lines << "  #{status} Strategy #{strat['strategy']}: #{strat['query']}"
                  end
                end
                lines << "  Result: #{attempt['result']}"
                lines.join("\n")
              end.join("\n\n")
            else
              "No lookup attempts yet"
            end
          %>
          <div class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-medium bg-red-500/10 text-red-400 rounded-full border border-red-500/20 cursor-help" title="<%= tooltip_text %>">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Not found on Tidal
          </div>
        <% else %>
          <div class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-medium bg-yellow-500/10 text-yellow-400 rounded-full border border-yellow-500/20">
            <svg class="w-3.5 h-3.5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Pending lookup...
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="text-sm text-gray-500 flex-shrink-0 ml-2">
      <% spotify_id = song.respond_to?(:spotify_id) ? song.spotify_id : song[:id] %>
      <% href = song.respond_to?(:href) ? song[:href] : song[:href] || "https://open.spotify.com/track/#{spotify_id}" %>
      <%= link_to href, target: "_blank", class: "text-gray-400 hover:text-green-500 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
      <% end %>
    </div>
  </div>
<% end %>