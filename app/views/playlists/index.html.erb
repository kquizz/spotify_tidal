<div class="text-center mb-8">
  <h1>Saved Playlists</h1>
  <p class="text-muted mt-2">Your saved Spotify playlists</p>
</div>

<% if @playlists.any? %>
  <div class="card mx-auto max-w-4xl">
    <div class="card-body">
      <div class="saved-playlists-grid">
        <% @playlists.each do |playlist| %>
          <%= render "shared/playlist_line", playlist: playlist %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="card mx-auto max-w-2xl">
    <div class="card-body text-center">
      <div class="empty-state">
        <div class="empty-state-icon">ğŸµ</div>
        <h3 class="empty-state-title">No saved playlists yet</h3>
        <p class="empty-state-text">Start by searching for user playlists and save the ones you like!</p>
        <a href="<%= root_path %>" class="btn btn-primary mt-4">Search Playlists</a>
      </div>
    </div>
  </div>
<% end %>
