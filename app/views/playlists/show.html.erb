<div class="text-center mb-8">
  <h1><%= @playlist.name %></h1>
  <p class="text-muted mt-2"><%= @playlist.tracks_total %> tracks â€¢ Owner: <%= @playlist.owner %></p>
</div>

<% if @playlist.image_url %>
  <div class="text-center mb-6">
    <img src="<%= @playlist.image_url %>" alt="<%= @playlist.name %>" class="w-32 h-32 rounded object-cover mx-auto">
  </div>
<% end %>

<div class="border rounded-lg overflow-hidden">
  <div class="divide-y">
    <% @playlist.songs.each do |song| %>
      <%= render "shared/song_line", song: song %>
    <% end %>
  </div>
</div>
