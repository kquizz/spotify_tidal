<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white/5 border border-white/10 rounded-2xl p-8 backdrop-blur-sm shadow-xl">
      <header class="text-center mb-8">
        <h2 class="text-3xl font-bold text-white mb-2">Welcome Back</h2>
        <p class="text-gray-400">Sign in to continue to Spotify Tidal</p>
      </header>
      
      <section>
        <%= form_with url: session_url, html: { data: { turbo: false }, class: "space-y-6" } do |form| %>
          <div class="space-y-2">
            <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-300" %>
            <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params[:email_address], class: "w-full px-4 py-3 bg-black/20 border border-white/10 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-white placeholder-gray-500 transition-all outline-none" %>
          </div>

          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <%= form.label :password, class: "block text-sm font-medium text-gray-300" %>
              <%= link_to "Forgot password?", new_password_path, class: "text-sm text-green-400 hover:text-green-300 transition-colors" %>
            </div>
            <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72, class: "w-full px-4 py-3 bg-black/20 border border-white/10 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-white placeholder-gray-500 transition-all outline-none" %>
          </div>

          <div>
            <%= form.submit "Sign in", class: "w-full px-4 py-3 text-black font-bold bg-green-500 hover:bg-green-400 rounded-lg transition-colors cursor-pointer" %>
          </div>
        <% end %>
      </section>
    </div>
    
    <div class="mt-8 text-center">
      <p class="text-gray-400">
        Don't have an account? 
        <%= link_to "Sign up", new_registration_path, class: "text-green-400 hover:text-green-300 font-medium transition-colors" %>
      </p>
    </div>
  </div>
</div>
