<div class="text-center mb-8">
  <h1>Spotify Playlist Viewer</h1>
  <p class="text-muted mt-2">Discover and explore public Spotify playlists</p>
</div>

<div class="card mx-auto max-w-2xl mb-6">
  <div class="card-body">
    <h2 class="text-xl font-semibold mb-4">Search for User's Public Playlists</h2>
    <%= form_with method: :get, class: "search-form" do |form| %>
      <div class="mb-4">
        <%= form.label :user_id, "Enter Spotify User ID:", class: "label" %>
        <%= form.text_field :user_id, class: "input w-full", placeholder: "e.g., spotify, username123" %>
      </div>
      <div>
        <%= form.submit "Search Playlists", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<% if @searched_user_id %>
  <div class="card mx-auto max-w-4xl">
    <div class="card-body">
      <h3 class="text-xl font-semibold mb-4">Public Playlists for User: <span class="text-accent"><%= @searched_user_id %></span></h3>
      <% if @searched_playlists.any? %>
        <div class="space-y-4">
          <% @searched_playlists.each do |pl| %>
            <div class="playlist-item" data-controller="playlist">
              <div class="playlist-header">
                <div class="playlist-art">
                  <% if pl[:image] %>
                    <img src="<%= pl[:image] %>" alt="<%= pl[:name] %>" class="playlist-art-image">
                  <% else %>
                    <div class="playlist-art-placeholder">No Image</div>
                  <% end %>
                </div>
                <div class="playlist-summary">
                  <div class="playlist-title">
                    <a href="<%= spotify_playlist_path(pl[:id]) %>" data-action="playlist#toggle" data-playlist-target="link" class="playlist-name"><%= pl[:name] %></a>
                    <% if @saved_playlist_ids.include?(pl[:id]) %>
                      <span class="playlist-badge">Saved</span>
                    <% end %>
                  </div>
                  <div class="playlist-meta text-sm">
                    <%= pl[:tracks_total] %> tracks â€¢ Owner: <%= pl[:owner] || "unknown" %>
                  </div>
                  <div class="playlist-links">
                    <% if pl[:href] %>
                      <a href="<%= pl[:href] %>" target="_blank" class="playlist-link">Open in Spotify</a>
                    <% end %>
                    <% unless @saved_playlist_ids.include?(pl[:id]) %>
                      <%= button_to "Save Playlist", playlists_path(playlist: { name: pl[:name], spotify_id: pl[:id], owner: pl[:owner], image_url: pl[:image], tracks_total: pl[:tracks_total] }), method: :post, class: "btn btn-xs btn-secondary" %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="playlist-tracks hidden" data-playlist-target="tracks">
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No public playlists found for this user.</p>
      <% end %>
    </div>
  </div>
<% end %>