<div class="max-w-md mx-auto">
  <div class="bg-white/5 border border-white/10 rounded-2xl p-8 backdrop-blur-sm shadow-xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Join Spotify Tidal</h1>
      <p class="text-gray-400">Create your account to get started</p>
    </div>

    <%= form_with model: @user, url: registration_path, local: true, class: "space-y-6" do |form| %>
      <div class="space-y-2">
        <%= form.label :email_address, class: "block text-sm font-medium text-gray-300" %>
        <%= form.email_field :email_address, required: true, autofocus: true, class: "w-full px-4 py-3 bg-black/20 border border-white/10 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-white placeholder-gray-500 transition-all outline-none", placeholder: "your@email.com" %>
      </div>

      <div class="space-y-2">
        <%= form.label :password, class: "block text-sm font-medium text-gray-300" %>
        <%= form.password_field :password, required: true, class: "w-full px-4 py-3 bg-black/20 border border-white/10 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-white placeholder-gray-500 transition-all outline-none", placeholder: "Choose a strong password" %>
      </div>

      <div class="space-y-2">
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-300" %>
        <%= form.password_field :password_confirmation, required: true, class: "w-full px-4 py-3 bg-black/20 border border-white/10 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-white placeholder-gray-500 transition-all outline-none", placeholder: "Confirm your password" %>
      </div>

      <div>
        <%= form.submit "Sign Up", class: "w-full px-4 py-3 text-black font-bold bg-green-500 hover:bg-green-400 rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <p class="text-gray-400">
        Already have an account?
        <%= link_to "Login here", new_session_path, class: "text-green-400 hover:text-green-300 font-medium transition-colors" %>
      </p>
    </div>
  </div>
</div>
