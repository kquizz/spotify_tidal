<div class="max-w-7xl mx-auto">
  <div class="card mb-12 fade-in">
    <div class="card-body text-center">
      <div class="w-32 h-32 bg-gradient-to-br from-orange-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-6 shadow-2xl">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
          <circle cx="9" cy="7" r="4"></circle>
          <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
      </div>
      <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-400 via-orange-400 to-red-400 bg-clip-text text-transparent"><%= @artist.name %></h1>
      <div class="flex flex-wrap items-center justify-center gap-6 text-muted text-lg">
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          </svg>
          <%= @artist.albums.count %> albums
        </span>
        <span>â€¢</span>
        <span class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 18V5l12-2v13"></path>
            <circle cx="6" cy="18" r="3"></circle>
            <circle cx="18" cy="16" r="3"></circle>
          </svg>
          <%= @artist.songs.count %> songs
        </span>
      </div>
    </div>
  </div>

  <div class="mb-12 fade-in" style="animation-delay: 0.1s;">
    <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
      </svg>
      Albums
    </h2>
    <% if @artist.albums.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
        <% @artist.albums.each do |album| %>
          <%= render "shared/album_cell", album: album %>
        <% end %>
      </div>
    <% else %>
      <div class="card">
        <div class="card-body text-center py-8">
          <p class="text-muted">No albums for this artist.</p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="fade-in" style="animation-delay: 0.15s;">
    <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
        <path d="M9 18V5l12-2v13"></path>
        <circle cx="6" cy="18" r="3"></circle>
        <circle cx="18" cy="16" r="3"></circle>
      </svg>
      Songs
    </h2>
    <% if @artist.songs.any? %>
      <div class="card">
        <div class="divide-y divide-white/5">
          <% @artist.songs.each do |song| %>
            <%= render "shared/song_line", song: song %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="card">
        <div class="card-body text-center py-8">
          <p class="text-muted">No songs for this artist.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
