<div class="text-center mb-8">
  <h1>Saved Albums</h1>
  <p class="text-muted mt-2">Your saved Spotify albums</p>
</div>

<% if @albums.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @albums.each do |album| %>
      <%= render "shared/album_cell", album: album %>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">No saved albums yet.</p>
<% end %>
