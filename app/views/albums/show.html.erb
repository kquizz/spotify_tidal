<div class="text-center mb-8">
  <h1><%= @album.name %></h1>
  <p class="text-muted mt-2">by <%= @album.artist.name %></p>
</div>

<% if @album.image_url %>
  <div class="text-center mb-6">
    <img src="<%= @album.image_url %>" alt="<%= @album.name %>" class="w-32 h-32 rounded object-cover mx-auto">
  </div>
<% end %>

<div class="border rounded-lg overflow-hidden">
  <div class="divide-y">
    <% @album.songs.each do |song| %>
      <%= render "shared/song_line", song: song %>
    <% end %>
  </div>
</div>
